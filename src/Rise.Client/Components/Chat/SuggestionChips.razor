@* Horizontaal scrollbare suggesties *@
<section aria-label="Gesprekssuggesties" class="bg-white border-t border-neutral-200 px-0 pb-1">
    <div class="-mx-4 px-4">
        <div class="thin-scroll overflow-x-auto overscroll-x-contain scroll-px-4 snap-x snap-mandatory" role="listbox">
            <div class="flex gap-2 py-2 w-max">
                @foreach (var s in Suggestions)
                {
                    <button type="button" role="option"
                            class="snap-start shrink-0 rounded-full bg-neutral-100 px-3 py-2 text-sm hover:bg-neutral-200 active:bg-neutral-300"
                            @onclick="(() => OnPick.InvokeAsync(s))">
                        @s
                    </button>
                }
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter] public IEnumerable<string> Suggestions { get; set; } = new[]
    {
        "Hey! Hoe gaat het vandaag?",
        "Wat heb je gedaan vandaag?",
        "Zullen we later bellen?",
        "Heb je plannen voor dit weekend?",
        "Ik ben trots op je! ðŸ’ª",
        "Wil je samen een spelletje spelen?"
    };

    [Parameter] public EventCallback<string> OnPick { get; set; }
}