<EditForm class="space-y-4" Model="Model" OnValidSubmit="OnSubmit">
    <FluentValidationValidator />

    <div>
        <label for="login-email" class="block text-sm font-medium text-[#04320C]">Email address</label>
        <InputText id="login-email"
                   @bind-Value="Model.Email"
                   type="email"
                   autocomplete="email"
                   placeholder="jouw@email.com"
                   class="mt-2 block w-full rounded-full bg-white px-4 py-3 text-gray-900 placeholder-gray-400 shadow-sm focus:outline-none focus:ring-2 focus:ring-[#0B6532] focus:ring-offset-1" />
        <ValidationMessage For="() => Model.Email" class="mt-2 block text-sm font-medium text-red-600" />
    </div>

    <div>
        <label for="login-password" class="block text-sm font-medium text-[#04320C]">Password</label>
        <InputText id="login-password"
                   @bind-Value="Model.Password"
                   type="password"
                   autocomplete="current-password"
                   placeholder="••••••••"
                   class="mt-2 block w-full rounded-full bg-white px-4 py-3 text-gray-900 placeholder-gray-400 shadow-sm focus:outline-none focus:ring-2 focus:ring-[#0B6532] focus:ring-offset-1" />
        <ValidationMessage For="() => Model.Password" class="mt-2 block text-sm font-medium text-red-600" />
    </div>

    <div class="flex items-center justify-between text-sm">
        <a href="#" class="text-[#0B6532] font-semibold hover:text-[#095227]">Forgot password?</a>
    </div>

    <button type="submit" class="w-full rounded-full bg-[#0B6532] py-3 text-lg font-semibold text-white shadow-md transition hover:bg-[#0a572b]">
        Login
    </button>

    <a href="/register" class="inline-flex w-full items-center justify-center rounded-full border-2 border-[#0B6532] py-3 text-lg font-semibold text-[#0B6532] bg-white transition hover:bg-[#e8f5ec]">
        Registreer
    </a>
</EditForm>

@code {
    [Parameter]
    public required AccountRequest.Login Model { get; set; }

    [Parameter]
    public EventCallback OnSubmit { get; set; }
}
