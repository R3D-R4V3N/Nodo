@page "/login"
@using Rise.Client.Identity.Components
@using Rise.Client.Home.Components
@layout EmptyLayout

<PageTitle>Login</PageTitle>

<AuthorizeView>
    <Authorized>
        <AuthLayout>
            <HeaderContent>
                <HomeLogo />
                <HomeHeading />
            </HeaderContent>
            <div class="rounded-3xl bg-white/70 p-6 text-center shadow-xl backdrop-blur">
                <p class="text-lg font-semibold text-[#04320C]">
                    Even geduld, we brengen je naar de homepageâ€¦
                </p>
            </div>
        </AuthLayout>
    </Authorized>
    <NotAuthorized>
        <AuthLayout>
            <HeaderContent>
                <HomeLogo />
                <HomeHeading />
            </HeaderContent>
            <AuthErrorList Errors="_result.Errors as IReadOnlyCollection<string>" />
            <LoginForm Model="Model" OnSubmit="LoginUser" />
        </AuthLayout>
    </NotAuthorized>
</AuthorizeView>
