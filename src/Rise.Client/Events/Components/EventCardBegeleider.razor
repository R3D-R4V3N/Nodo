<div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow">
    <div class="relative h-48 bg-neutral-200">
        <img src="@ImageUrl" alt="@Title" class="w-full h-full object-cover" />
        <div class="absolute top-3 right-3 bg-white rounded-full px-3 py-1 text-sm font-semibold text-[#127646]">
            €@Price.ToString("0.00")
        </div>
    </div>

    <div class="p-4">
        <div class="mb-3 flex items-start justify-between gap-4">
            <h3 class="text-lg font-bold text-neutral-800">@Title</h3>
            <button type="button"
                    class="rounded-full p-2 text-neutral-500 hover:bg-neutral-100"
                    aria-label="Evenement verwijderen"
                    @onclick="HandleDeleteClick">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 256 256">
                    <path d="M216,48H168V40a24,24,0,0,0-24-24H112A24,24,0,0,0,88,40v8H40a8,8,0,0,0,0,16h8V208a16,16,0,0,0,16,16H192a16,16,0,0,0,16-16V64h8a8,8,0,0,0,0-16ZM104,40a8,8,0,0,1,8-8h32a8,8,0,0,1,8,8v8H104ZM192,208H64V64H192ZM104,96v88a8,8,0,0,1-16,0V96a8,8,0,0,1,16,0Zm64,0v88a8,8,0,0,1-16,0V96a8,8,0,0,1,16,0Z"></path>
                </svg>
            </button>
        </div>

        <div class="space-y-2 mb-4">
            <div class="flex items-center gap-2 text-neutral-600 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                    <path d="M208,32H184V24a8,8,0,0,0-16,0v8H88V24a8,8,0,0,0-16,0v8H48A16,16,0,0,0,32,48V208a16,16,0,0,0,16,16H208a16,16,0,0,0,16-16V48A16,16,0,0,0,208,32ZM72,48v8a8,8,0,0,0,16,0V48h80v8a8,8,0,0,0,16,0V48h24V80H48V48ZM208,208H48V96H208V208Z"></path>
                </svg>
                @FormatDateDutch(Date)
            </div>

            <div class="flex items-center gap-2 text-neutral-600 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                    <path d="M128,64a40,40,0,1,0,40,40A40,40,0,0,0,128,64Zm0,64a24,24,0,1,1,24-24A24,24,0,0,1,128,128Zm0-112a88.1,88.1,0,0,0-88,88c0,31.4,14.51,64.68,42,96.25a254.19,254.19,0,0,0,41.45,38.3,8,8,0,0,0,9.18,0A254.19,254.19,0,0,0,174,200.25c27.45-31.57,42-64.85,42-96.25A88.1,88.1,0,0,0,128,16Zm0,206c-16.53-13-72-60.75-72-118a72,72,0,0,1,144,0C200,161.23,144.53,209,128,222Z"></path>
                </svg>
                @Location
            </div>

            <div class="flex items-center gap-2 text-neutral-600 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 256 256">
                    <path d="M117.25,157.92a60,60,0,1,0-66.5,0A95.83,95.83,0,0,0,3.53,195.63a8,8,0,1,0,13.4,8.74,80,80,0,0,1,134.14,0,8,8,0,0,0,13.4-8.74A95.83,95.83,0,0,0,117.25,157.92ZM40,108a44,44,0,1,1,44,44A44.05,44.05,0,0,1,40,108Zm210.14,98.7a8,8,0,0,1-11.07-2.33A79.83,79.83,0,0,0,172,168a8,8,0,0,1,0-16,44,44,0,1,0-16.34-84.87,8,8,0,1,1-5.94-14.85,60,60,0,0,1,55.53,105.64,95.83,95.83,0,0,1,47.22,37.71A8,8,0,0,1,250.14,206.7Z"></path>
                </svg>
                @InterestedCount geïnteresseerden
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Description))
        {
            <p class="text-neutral-600 text-sm line-clamp-2">@Description</p>
        }
    </div>
</div>
