<div class="mx-4 mt-4 mb-8 bg-white rounded-2xl shadow-lg overflow-hidden border border-green-700/20">

    <img src="@ImageUrl"
         class="w-full h-60 object-cover rounded-t-2xl" />

    <div class="p-4">

        <p class="text-sm text-gray-600">
            @DateText
        </p>


        <h2 class="text-xl font-semibold text-gray-900 mt-1">
            @Title
        </h2>

        <p class="text-gray-500 text-sm">
            @Location
        </p>
        <p class="text-green-700 font-semibold text-lg mt-2">
            € @Price.ToString("0.00")
        </p>

        <div class="flex items-center gap-3 mt-4">
            <div class="flex -space-x-3">
                @foreach (var user in InterestedUsers.Take(3))
                {
                    <img src="@user.AvatarUrl"
                         alt="@user.Name"
                         class="w-6 h-6 rounded-full object-cover border-2 border-white" />
                }
            </div>
            <p class="text-gray-600 text-sm">
                @if (InterestedUsers.Count > 0)
                {
                    <text>@InterestedUsers.Count @(InterestedUsers.Count == 1 ? "persoon is" : "mensen zijn") geïnteresseerd</text>
                }
                else
                {
                    <text>Wees de eerste om interesse te tonen!</text>
                }
            </p>
        </div>

        <button @onclick="HandleToggleInterest"
                disabled="@_isLoading"
                class="@GetButtonClasses()">
            <span class="inline-flex items-center justify-center gap-2 w-full">
                @if (_isLoading)
                {
                    <LoadingIndicator Message="Laden..." Class="text-white" />
                }
                else if (IsInterested)
                {
                    <svg class="w-5 h-5 fill-current flex-shrink-0" viewBox="0 0 24 24">
                        <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                    </svg>
                    <span class="font-semibold">Geïnteresseerd</span>
                }
                else
                {
                    <svg class="w-5 h-5 stroke-current flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                    <span class="font-semibold">Interesse tonen</span>
                }
            </span>
        </button>

    </div>
</div>

