@using Rise.Shared.Assets
@using Rise.Shared.Assets

@inject NavigationManager NavigationManager

@* Header met terugknop, avatar, titel en alarmknop *@
    <div class="relative flex items-center gap-3 bg-[#127646] rounded-b-3xl text-white px-4 pb-4 pt-8">
    <button class="p-2 -ml-2 rounded-full hover:bg-white/10" aria-label="Terug" @onclick="OnBack">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
    </button>

    <img src="@AvatarUrl" 
         alt="@DisplayName" 
         class="h-12 w-12  rounded-full object-cover border border-neutral-200 shrink-0 cursor-pointer hover:scale-105 transition"
          />

    <div class="flex-1 text-start min-w-0">
        <h1 class="text-base font-semibold leading-5 truncate">@DisplayName</h1>
        <p class="text-xs text-white/80">@StatusText</p>
    </div>

    <button type="button" class="grid place-items-center h-12 w-12 rounded-xl bg-[#D64541] hover:bg-[#d12e2a] text-white" @onclick="OnAlert">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 256 256"><path d="M224,71.1a8,8,0,0,1-10.78-3.42,94.13,94.13,0,0,0-33.46-36.91,8,8,0,1,1,8.54-13.54,111.46,111.46,0,0,1,39.12,43.09A8,8,0,0,1,224,71.1ZM35.71,72a8,8,0,0,0,7.1-4.32A94.13,94.13,0,0,1,76.27,30.77a8,8,0,1,0-8.54-13.54A111.46,111.46,0,0,0,28.61,60.32,8,8,0,0,0,35.71,72Zm186.1,103.94A16,16,0,0,1,208,200H167.2a40,40,0,0,1-78.4,0H48a16,16,0,0,1-13.79-24.06C43.22,160.39,48,138.28,48,112a80,80,0,0,1,160,0C208,138.27,212.78,160.38,221.81,175.94ZM150.62,200H105.38a24,24,0,0,0,45.24,0Z"></path></svg>
        <span class="sr-only">Alarm</span>
    </button>
</div>

@code {
    [Parameter] public string DisplayName { get; set; } = "Default";
    [Parameter] public string AvatarUrl { get; set; } = DefaultImages.Profile;
    [Parameter] public string StatusText { get; set; } = "Default";
    [Parameter] public EventCallback OnBack { get; set; }
    [Parameter] public EventCallback OnAlert { get; set; }
}
