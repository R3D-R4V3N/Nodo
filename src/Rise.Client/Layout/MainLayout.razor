<div class="relative min-h-screen">
    <button type="button"
            class="inline-flex items-center p-2 mt-2 ms-3 text-sm text-gray-500 rounded-lg sm:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200"
            aria-controls="app-sidebar"
            aria-expanded="@_isSidebarOpen.ToString().ToLowerInvariant()"
            @onclick="ToggleSidebar">
        <span class="sr-only">Open sidebar</span>
        <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 0 1 2.75 4h14.5a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 4.75zm0 10.5a.75.75 0 0 1 .75-.75h7.5a.75.75 0 0 1 0 1.5h-7.5a.75.75 0 0 1-.75-.75zM2 10a.75.75 0 0 1 .75-.75h14.5a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 10z" />
        </svg>
    </button>

    @if (_isSidebarOpen)
    {
        <div class="fixed inset-0 z-30 bg-black/40 sm:hidden" @onclick="CloseSidebar"></div>
    }

    <aside id="app-sidebar"
           class="@GetSidebarClasses()"
           aria-label="Sidebar">
        <SidebarNav OnNavigate="HandleSidebarNavigate" />
    </aside>

    <div class="@GetMainClasses()">
        <main>
            <section class="section">
                @Body
            </section>
        </main>
    </div>

    <NavBar />
</div>
