@using Rise.Client.State
<header class="flex justify-between items-center mt-4 ">
    <h1 class="text-4xl text-left font-semibold leading-tight">@Title</h1>
    <div class="flex items-center space-x-4">
          
        <img src="@UserState.User?.AvatarUrl" alt="user" class="h-10 w-10 rounded-full object-cover border border-neutral-200 bg-white">
        <div class="flex items-center space-x-4">
            <p>@UserState.User?.Name</p>
         
        </div>
    </div>
</header>

@code
{
    [Inject] public UserState UserState { get; set; }

    [Parameter] public string Title { get; set; }
}
