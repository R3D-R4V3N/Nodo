@page "/admin/registration-requests"
@attribute [Authorize(Roles = $"{AppRoles.Supervisor},{AppRoles.Administrator}")]
@inherits RegistrationRequestsPage

<PageTitle>Registratieaanvragen</PageTitle>

<div class="space-y-6">
    <h1 class="text-3xl font-semibold text-[#04320C]">Registratieaanvragen</h1>

    @if (_isLoading)
    {
        <p class="text-gray-600">Bezig met ladenâ€¦</p>
    }
    else
    {
        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="rounded-lg border border-red-200 bg-red-50 p-4 text-red-700">@_errorMessage</div>
        }

        @if (!string.IsNullOrEmpty(_successMessage))
        {
            <div class="rounded-lg border border-green-200 bg-green-50 p-4 text-green-700">@_successMessage</div>
        }

        @if (_requests.Count == 0)
        {
            <p class="text-gray-600">Er zijn momenteel geen openstaande aanvragen.</p>
        }
        else
        {
            <div class="overflow-x-auto rounded-lg border border-gray-200 bg-white shadow-sm">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Naam</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">E-mail</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Organisatie</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Aangevraagd op</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Supervisor</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Acties</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100 bg-white">
                        @foreach (var request in _requests)
                        {
                            <tr>
                                <td class="px-6 py-4 text-sm font-medium text-gray-900">@request.FirstName @request.LastName</td>
                                <td class="px-6 py-4 text-sm text-gray-600">@request.Email</td>
                                <td class="px-6 py-4 text-sm text-gray-600">@request.OrganizationName</td>
                                <td class="px-6 py-4 text-sm text-gray-600">@request.RequestedAt.ToString("dd/MM/yyyy")</td>
                                <td class="px-6 py-4 text-sm text-gray-600">
                                    @if (request.Supervisors.Count == 0)
                                    {
                                        <span class="text-red-600">Geen supervisors beschikbaar</span>
                                    }
                                    else
                                    {
                                        <select class="w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-sm focus:border-[#0B6532] focus:outline-none focus:ring-2 focus:ring-[#0B6532]"
                                                @onchange="args => OnSupervisorChanged(request.Id, args)"
                                                value="@(_selectedSupervisors.TryGetValue(request.Id, out var selected) && selected.HasValue ? selected.Value.ToString() : string.Empty)">
                                            <option value="">Selecteer een supervisor</option>
                                            @foreach (var supervisor in request.Supervisors)
                                            {
                                                <option value="@supervisor.Id">@supervisor.Name</option>
                                            }
                                        </select>
                                    }
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-600">
                                    <button class="rounded-full bg-[#0B6532] px-4 py-2 text-white shadow disabled:cursor-not-allowed disabled:bg-gray-300"
                                            disabled="@(request.Supervisors.Count == 0 || !_selectedSupervisors.TryGetValue(request.Id, out var selectedSupervisor) || selectedSupervisor is null || _isProcessing)"
                                            @onclick="() => ApproveAsync(request.Id)">
                                        Goedkeuren
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
</div>
