@page "/helpdesk/SupervisorChat"
@using Rise.Client.Chats.Components
@layout EmptyLayout
@attribute [Authorize]

<div class="flex flex-col h-screen max-h-screen overflow-hidden bg-neutral-100 text-neutral-900">

    @if (_isLoading)
    {
        <div class="flex-1 grid place-items-center">
            <span class="loading loading-spinner text-primary"></span>
        </div>
    }
    else if (_loadError != null)
    {
        <div class="flex-1 grid place-items-center">
            <p class="text-red-600">@_loadError</p>
        </div>
    }
    else if (_supervisorChatId.HasValue)
    {
        <ChatBody ChatId="@_supervisorChatId.Value" 
                  DisplayNoodknop="@false"/>
    }
</div>

<style>
    html, body { height: 100%; overflow-x: hidden; }
</style>