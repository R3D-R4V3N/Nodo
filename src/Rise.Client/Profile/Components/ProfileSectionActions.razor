<div class="flex items-center gap-2">
    @if (IsEditing)
    {
        <button type="button"
                class="rounded-xl border border-neutral-200 bg-white px-4 py-2.5 text-sm font-medium text-neutral-700 shadow hover:bg-white/90 active:scale-[0.99] inline-flex items-center gap-2 disabled:opacity-60 disabled:cursor-not-allowed"
                @onclick="HandleCancel"
                disabled="@IsBusy">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 256 256"><path d="M208.49,191.51a12,12,0,0,1-17,17L128,145,64.49,208.49a12,12,0,0,1-17-17L111,128,47.51,64.49a12,12,0,0,1,17-17L128,111l63.51-63.52a12,12,0,0,1,17,17L145,128Z"></path></svg>
            <span>Annuleren</span>
        </button>
        <button type="button"
                class="rounded-xl bg-[#127646] px-4 py-2.5 text-sm font-medium text-white shadow hover:bg-[#0f663c] active:scale-[0.99] inline-flex items-center gap-2 disabled:opacity-60 disabled:cursor-not-allowed"
                @onclick="HandleSave"
                disabled="@IsBusy">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 256 256"><path d="M227.31,73.37,182.63,28.68a16,16,0,0,0-22.63,0L36.69,152A15.86,15.86,0,0,0,32,163.31V208a16,16,0,0,0,16,16H92.69A15.86,15.86,0,0,0,104,219.31L227.31,96a16,16,0,0,0,0-22.63ZM51.31,160l90.35-90.35,16.68,16.69L68,176.68ZM48,179.31,76.69,208H48Zm48,25.38L79.31,188l90.35-90.35h0l16.68,16.69Z"></path></svg>
            <span>Opslaan</span>
        </button>
    }
    else if (ShowEditButton)
    {
        <button type="button"
                class="rounded-xl bg-white px-4 py-2.5 text-sm font-medium text-[#127646] shadow hover:bg-white/90 active:scale-[0.99] inline-flex items-center gap-2 transition-opacity disabled:cursor-not-allowed disabled:opacity-60"
                @onclick="HandleEdit"
                disabled="@(!CanEdit || IsBusy)">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 256 256"><path d="M227.31,73.37,182.63,28.68a16,16,0,0,0-22.63,0L36.69,152A15.86,15.86,0,0,0,32,163.31V208a16,16,0,0,0,16,16H92.69A15.86,15.86,0,0,0,104,219.31L227.31,96a16,16,0,0,0,0-22.63ZM51.31,160l90.35-90.35,16.68,16.69L68,176.68ZM48,179.31,76.69,208H48Zm48,25.38L79.31,188l90.35-90.35h0l16.68,16.69Z"></path></svg>
            <span>Bewerken</span>
        </button>
    }
</div>

@code {
    [Parameter] public bool IsEditing { get; set; }
    [Parameter] public bool IsBusy { get; set; }
    [Parameter] public bool CanEdit { get; set; } = true;
    [Parameter] public bool ShowEditButton { get; set; } = true;
    [Parameter] public EventCallback OnEdit { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }

    private Task HandleEdit() => OnEdit.InvokeAsync();
    private Task HandleCancel() => OnCancel.InvokeAsync();
    private Task HandleSave() => OnSave.InvokeAsync();
}
