@using Rise.Client.Profile.Models

<section class="mt-6">
    <h3 class="mb-2 text-sm font-medium text-neutral-700">Interesses</h3>
    @if (Interests.Any())
    {
        <div class="space-y-3">
            @foreach (var interest in Interests)
            {
                <div class="rounded-2xl border border-neutral-200 bg-white px-4 py-3">
                    <div class="text-sm font-semibold text-neutral-800">@interest.Type</div>
                    <div class="mt-2 grid gap-1 text-sm text-neutral-600">
                        <span><span class="font-medium text-emerald-700">Leuk:</span> @(string.IsNullOrWhiteSpace(interest.Like) ? "–" : interest.Like)</span>
                        <span><span class="font-medium text-rose-700">Niet leuk:</span> @(string.IsNullOrWhiteSpace(interest.Dislike) ? "–" : interest.Dislike)</span>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-sm text-neutral-500">Er zijn nog geen interesses toegevoegd.</p>
    }
</section>

@code {
    [Parameter] public IReadOnlyList<ProfileInterestModel> Interests { get; set; } = Array.Empty<ProfileInterestModel>();
}
