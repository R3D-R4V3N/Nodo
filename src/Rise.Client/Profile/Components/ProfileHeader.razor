<header class="sticky top-0 z-40">
    <div class="bg-[#127646] text-white shadow rounded-b-3xl">
        <div class="mx-auto max-w-screen-sm px-4 py-4 flex items-center gap-3">
            <button type="button" class="p-2 -ml-2 rounded-full hover:bg-white/10 transition" @onclick="HandleBack" aria-label="Terug">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </button>
            <h1 class="text-base font-semibold text-white">@Title</h1>
            <div class="ml-auto flex items-center gap-2">
                @if (IsEditing)
                {
                    <button type="button" class="rounded-xl border border-white text-white px-4 py-3 text-sm font-medium hover:bg-white/10 active:scale-[0.99] inline-flex items-center justify-center gap-2" @onclick="HandleCancel">

                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 256 256"><path d="M208.49,191.51a12,12,0,0,1-17,17L128,145,64.49,208.49a12,12,0,0,1-17-17L111,128,47.51,64.49a12,12,0,0,1,17-17L128,111l63.51-63.52a12,12,0,0,1,17,17L145,128Z"></path></svg>
                        <span>Annuleren</span>
                    </button>
                    <button type="button" class="rounded-xl bg-white text-[#127646] px-4 py-3 text-sm font-medium shadow hover:bg-neutral-100 active:scale-[0.99] inline-flex items-center" @onclick="HandleSave">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 256 256">
                            <path d="M227.31,73.37,182.63,28.68a16,16,0,0,0-22.63,0L36.69,152A15.86,15.86,0,0,0,32,163.31V208a16,16,0,0,0,16,16H92.69A15.86,15.86,0,0,0,104,219.31L227.31,96a16,16,0,0,0,0-22.63ZM51.31,160l90.35-90.35,16.68,16.69L68,176.68ZM48,179.31,76.69,208H48Zm48,25.38L79.31,188l90.35-90.35h0l16.68,16.69Z"></path>
                        </svg>
                        Opslaan
                    </button>
                }
                else
                {
                    <button type="button"
                            class="rounded-xl bg-white text-[#127646] px-4 py-3 text-sm font-medium shadow hover:bg-neutral-100 active:scale-[0.99] inline-flex items-center transition-opacity disabled:cursor-not-allowed disabled:opacity-60"
                            @onclick="HandleEdit"
                            disabled="@(!CanEdit)">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 256 256">
                            <path d="M227.31,73.37,182.63,28.68a16,16,0,0,0-22.63,0L36.69,152A15.86,15.86,0,0,0,32,163.31V208a16,16,0,0,0,16,16H92.69A15.86,15.86,0,0,0,104,219.31L227.31,96a16,16,0,0,0,0-22.63ZM51.31,160l90.35-90.35,16.68,16.69L68,176.68ZM48,179.31,76.69,208H48Zm48,25.38L79.31,188l90.35-90.35h0l16.68,16.69Z"></path>
                        </svg>
                        Bewerken
                    </button>
                }
            </div>
        </div>
    </div>
</header>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public bool IsEditing { get; set; }
    [Parameter] public bool CanEdit { get; set; } = true;
    [Parameter] public EventCallback OnBack { get; set; }
    [Parameter] public EventCallback OnEdit { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }

    private Task HandleBack() => OnBack.InvokeAsync();
    private Task HandleEdit() => OnEdit.InvokeAsync();
    private Task HandleCancel() => OnCancel.InvokeAsync();
    private Task HandleSave() => OnSave.InvokeAsync();
}
