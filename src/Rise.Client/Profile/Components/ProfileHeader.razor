<TopBar UseHeaderElement="true"
        Class="sticky top-0 z-40 shadow"

        InnerClass="mx-auto max-w-screen-sm px-4 pb-4 pt-8"
        ShowBackButton="false"
        OnBack="HandleBack"
        Title="@Title">
    @if (ShowActions)
    {
        <TrailingContent>
            @if (IsEditing)
            {
                <ProfileActionButton Text="Annuleren"
                                      Variant="ProfileActionButtonVariant.Secondary"
                                      OnClick="HandleCancel">
                    <Icon>
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 256 256"><path d="M208.49,191.51a12,12,0,0,1-17,17L128,145,64.49,208.49a12,12,0,0,1-17-17L111,128,47.51,64.49a12,12,0,0,1,17-17L128,111l63.51-63.52a12,12,0,0,1,17,17L145,128Z"></path></svg>
                    </Icon>
                </ProfileActionButton>
                <ProfileActionButton Text="Opslaan"
                                      Variant="ProfileActionButtonVariant.Primary"
                                      OnClick="HandleSave">
                    <Icon>
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 256 256">
                            <path d="M227.31,73.37,182.63,28.68a16,16,0,0,0-22.63,0L36.69,152A15.86,15.86,0,0,0,32,163.31V208a16,16,0,0,0,16,16H92.69A15.86,15.86,0,0,0,104,219.31L227.31,96a16,16,0,0,0,0-22.63ZM51.31,160l90.35-90.35,16.68,16.69L68,176.68ZM48,179.31,76.69,208H48Zm48,25.38L79.31,188l90.35-90.35h0l16.68,16.69Z"></path>
                        </svg>
                    </Icon>
                </ProfileActionButton>
            }
            else
            {
                @* Maak een Bewerken Button component *@
                <ProfileActionButton Text="Bewerken"
                                      Variant="ProfileActionButtonVariant.Ghost"
                                      OnClick="HandleEdit"
                                      Disabled="@(!CanEdit)">
                    <Icon>
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 256 256">
                            <path d="M227.31,73.37,182.63,28.68a16,16,0,0,0-22.63,0L36.69,152A15.86,15.86,0,0,0,32,163.31V208a16,16,0,0,0,16,16H92.69A15.86,15.86,0,0,0,104,219.31L227.31,96a16,16,0,0,0,0-22.63ZM51.31,160l90.35-90.35,16.68,16.69L68,176.68ZM48,179.31,76.69,208H48Zm48,25.38L79.31,188l90.35-90.35h0l16.68,16.69Z"></path>
                        </svg>
                    </Icon>
                </ProfileActionButton>
            }
        </TrailingContent>
    }
</TopBar>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public bool IsEditing { get; set; }
    [Parameter] public bool CanEdit { get; set; } = true;
    [Parameter] public bool ShowActions { get; set; } = true;
    [Parameter] public EventCallback OnBack { get; set; }
    [Parameter] public EventCallback OnEdit { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }

    private Task HandleBack() => OnBack.InvokeAsync();
    private Task HandleEdit() => OnEdit.InvokeAsync();
    private Task HandleCancel() => OnCancel.InvokeAsync();
    private Task HandleSave() => OnSave.InvokeAsync();
}
