@using Rise.Shared.Users

@if (DisplayedHobbies.Count > 0)
{
    <section class="rounded-3xl bg-white/80 p-6 shadow-lg ring-1 ring-white/70 backdrop-blur-sm sm:p-8">
        <div class="flex flex-col gap-4">
            <h2 class="text-lg font-semibold text-neutral-900 sm:text-xl">Hobby's</h2>
            <div class="grid grid-cols-2 gap-3 sm:grid-cols-3">
                @foreach (var hobby in DisplayedHobbies)
                {
                    <div class="group relative overflow-hidden rounded-3xl bg-gradient-to-br from-rose-100 via-white to-amber-100 px-4 py-5 shadow-sm transition hover:shadow-md">
                        <span class="text-3xl transition-transform duration-200 ease-out group-hover:scale-110" aria-hidden="true">@hobby.Emoji</span>
                        <span class="mt-3 block text-sm font-semibold text-neutral-800 sm:text-base">@hobby.Name</span>
                    </div>
                }
            </div>
        </div>
    </section>
}

@code
{
    [Parameter] public IReadOnlyList<HobbyDto.Get> Hobbies { get; set; } = Array.Empty<HobbyDto.Get>();

    private IReadOnlyList<HobbyDto.Get> DisplayedHobbies => Hobbies
        .Where(hobby => hobby is not null)
        .Take(6)
        .ToList();
}
