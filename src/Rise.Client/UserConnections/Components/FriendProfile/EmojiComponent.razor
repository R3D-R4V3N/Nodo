@using Rise.Client.Profile.Models


<div class="hidden md:block absolute top-1/2 left-1/2 z-[60] w-full max-w-[420px] -translate-x-1/2 -translate-y-1/2 px-6">
    <div class="grid grid-cols-3 items-center justify-center gap-6">
        @foreach (var hobby in Hobbies.Take(3))
        {
            <button type="button" class="group focus:outline-none">
                <div class="flex h-24 flex-col items-center justify-center rounded-2xl border border-white/70 bg-white/90 text-neutral-800 shadow-lg backdrop-blur transition group-hover:-translate-y-1 group-active:scale-[0.98]">
                    <div class="text-3xl leading-none text-[#127646]">@hobby.Emoji</div>
                    <span class="mt-1 text-sm font-medium">@hobby.Name</span>
                </div>
            </button>
        }
    </div>



</div>

@code {
    [Parameter] public IReadOnlyList<ProfileHobbyModel> Hobbies { get; set; } = Array.Empty<ProfileHobbyModel>();
}