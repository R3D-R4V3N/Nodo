@using Rise.Shared.Users

@if (DisplayedHobbies.Count > 0)
{
    <section class="rounded-3xl bg-white p-6 shadow-sm ring-1 ring-neutral-200">
        <div class="flex flex-col gap-4">
            <h2 class="text-lg font-semibold text-neutral-900">Hobby's</h2>
            <div class="grid grid-cols-1 gap-3 sm:grid-cols-2">
                @foreach (var hobby in DisplayedHobbies)
                {
                    <div class="flex items-center gap-3 rounded-2xl bg-neutral-50 px-4 py-3 text-neutral-800">
                        <span class="text-2xl" aria-hidden="true">@hobby.Emoji</span>
                        <span class="text-sm font-medium sm:text-base">@hobby.Name</span>
                    </div>
                }
            </div>
        </div>
    </section>
}

@code
{
    [Parameter] public IReadOnlyList<HobbyDto.Get> Hobbies { get; set; } = Array.Empty<HobbyDto.Get>();

    private IReadOnlyList<HobbyDto.Get> DisplayedHobbies => Hobbies
        .Where(hobby => hobby is not null)
        .Take(6)
        .ToList();
}
