
<section class="rounded-3xl bg-white p-6 shadow-sm ring-1 ring-neutral-200">
    <div class="flex flex-col gap-4">
        <h2 class="text-lg font-semibold text-neutral-900">@Title</h2>
        <p class="text-base leading-relaxed text-neutral-700">@Description</p>

        @if (PlusKnop)
        {
            <div class="rounded-2xl border border-dashed border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
                @HighlightText
            </div>
        }
    </div>
</section>

@code
{
    [Parameter] public string Title { get; set; } = "Over";
    [Parameter] public string Description { get; set; } = string.Empty;
    [Parameter] public bool PlusKnop { get; set; }
    [Parameter] public string HighlightText { get; set; } = "Deze persoon staat open voor nieuwe connecties.";
}
