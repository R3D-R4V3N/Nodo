<section class="rounded-3xl bg-white p-5 shadow-md ring-1 ring-black/5 sm:p-6">
    <header class="flex flex-col gap-1 sm:flex-row sm:items-end sm:justify-between">
        <div>
            <p class="text-xs font-semibold uppercase tracking-[0.18em] text-emerald-600">Over @SafeNameCapitalized</p>
            <h2 class="text-xl font-semibold text-neutral-900 sm:text-2xl">Leer @SafeName beter kennen</h2>
        </div>
    </header>

    <p class="mt-4 text-sm leading-relaxed text-neutral-600 sm:text-base">@DescriptionText</p>

    <div class="mt-6 flex flex-col gap-3 sm:flex-row">
        @if (ShowAddButton)
        {
            <button type="button" 
                    class="mt-3 w-full rounded-xl bg-[#127646] px-4 py-3 text-sm font-medium text-white shadow hover:bg-[#0f663c] active:scale-[0.99] inline-flex items-center justify-center gap-2"
                    aria-label="Voeg @SafeName toe als vriend"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 256 256"><path d="M228,128a12,12,0,0,1-12,12H140v76a12,12,0,0,1-24,0V140H40a12,12,0,0,1,0-24h76V40a12,12,0,0,1,24,0v76h76A12,12,0,0,1,228,128Z"></path></svg>
                <span>Vriend toevoegen</span>
            </button>

        }
        else
        {
            <button type="button" 
                    class="mt-3 w-full rounded-xl bg-[#127646] px-4 py-3 text-sm font-medium text-white shadow hover:bg-[#0f663c] active:scale-[0.99] inline-flex items-center justify-center gap-2"
                    aria-label="Stuur een bericht naar @SafeName"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 256 256"><path d="M224,48H32a8,8,0,0,0-8,8V192a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V56A8,8,0,0,0,224,48ZM98.71,128,40,181.81V74.19Zm11.84,10.85,12,11.05a8,8,0,0,0,10.82,0l12-11.05,58,53.15H52.57ZM157.29,128,216,74.18V181.82Z"></path></svg>
                <span>Bericht sturen</span>
            </button>

        }
    </div>
</section>

@code {
    [Parameter] public string Description { get; set; } = string.Empty;
    [Parameter] public bool ShowAddButton { get; set; } = false;
    [Parameter] public string FirstName { get; set; } = string.Empty;

    private string SafeName => string.IsNullOrWhiteSpace(FirstName) ? "deze gebruiker" : FirstName;
    private string SafeNameCapitalized => string.IsNullOrWhiteSpace(FirstName) ? "Deze gebruiker" : FirstName;
    private string DescriptionText => string.IsNullOrWhiteSpace(Description)
        ? $"{SafeNameCapitalized} heeft nog geen beschrijving gedeeld."
        : Description;
}
