<div class="max-w-[90%] text-white drop-shadow-[0_1px_1px_rgba(0,0,0,0.4)] md:mt-10 md:max-w-md">
    <h1 class="flex items-center gap-2 text-3xl font-bold sm:text-4xl">@Name</h1>

    @if (!string.IsNullOrWhiteSpace(FirstName))
    {
        <p class="mt-2 text-sm text-white/90">Maak kennis met @FirstName.</p>
    }

    <div class="mt-3 flex flex-wrap gap-2 md:mt-5">
        @if (AgeInYears is int age)
        {
            <span class="inline-flex items-center gap-2 rounded-full bg-[#FBF0DA] px-3 py-1 text-xs font-medium text-[#73510D] shadow-sm sm:text-base">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 256 256" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="16">
                    <line x1="128" y1="72" x2="128" y2="96" />
                    <path d="M48,96H208a16,16,0,0,1,16,16v23.33c0,17.44-13.67,32.18-31.1,32.66A32,32,0,0,1,160,136a32,32,0,0,1-64,0,32,32,0,0,1-32.9,32C45.67,167.51,32,152.77,32,135.33V112A16,16,0,0,1,48,96Z" />
                    <path d="M216,156.9V200a16,16,0,0,1-16,16H56a16,16,0,0,1-16-16V156.9" />
                    <path d="M152,48a24,24,0,0,1-48,0c0-24,24-40,24-40S152,24,152,48Z" />
                </svg>
                <span>@age jaar</span>
            </span>
        }

        @if (!string.IsNullOrWhiteSpace(Gender))
        {
            <span class="inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-medium shadow-sm sm:text-base @GetGenderBadgeClasses()">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 256 256" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="24">
                    <circle cx="128" cy="96" r="72" />
                    <line x1="128" y1="168" x2="128" y2="240" />
                    <line x1="88" y1="208" x2="168" y2="208" />
                </svg>
                <span>@Gender</span>
            </span>
        }
    </div>
</div>

@code {
    [Parameter] public string Name { get; set; } = string.Empty;
    [Parameter] public int? AgeInYears { get; set; }
    [Parameter] public string Gender { get; set; } = string.Empty;
    [Parameter] public string FirstName { get; set; } = string.Empty;

    private string GetGenderBadgeClasses()
    {
        if (string.IsNullOrWhiteSpace(Gender))
        {
            return "bg-[#D6F0E0] text-[#0D6832]";
        }

        return Gender.Trim().ToLowerInvariant() switch
        {
            "vrouw" => "bg-[#EDD7D7] text-[#AF233A]",
            "man" => "bg-sky-100/90 text-sky-900",
            _ => "bg-[#D6F0E0] text-[#0D6832]"
        };
    }
}
