    <div class="flex flex-wrap gap-2 text-sm">
        @if (!string.IsNullOrWhiteSpace(Age))
        {
            <span class="inline-flex items-center gap-1 rounded-full bg-emerald-50 px-3 py-1 font-medium text-emerald-800">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 256 256" fill="currentColor">
                    <path d="M128,12a8,8,0,0,1,8,8V40.49c23.61,3.56,40,16.55,40,31.51a8,8,0,0,1-16,0c0-8.28-12.67-16-32-16s-32,7.72-32,16c0,11.62,19.14,20.43,43.77,31.44C161.44,116.12,184,126.19,184,152c0,14.95-16.39,27.94-40,31.5V236a8,8,0,0,1-16,0V183.51c-23.61-3.56-40-16.55-40-31.51a8,8,0,0,1,16,0c0,8.28,12.67,16,32,16s32-7.72,32-16c0-11.62-19.14-20.43-43.77-31.44C94.56,115.88,72,105.81,72,80c0-14.95,16.39-27.94,40-31.5V20A8,8,0,0,1,128,12Z" />
                </svg>
                @Age
            </span>
        }

        @if (!string.IsNullOrWhiteSpace(Gender))
        {
            <span class="inline-flex items-center gap-1 rounded-full bg-neutral-100 px-3 py-1 font-medium text-neutral-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 256 256" fill="currentColor">
                    <path d="M200,96a72,72,0,1,0-80,71.28V200H96a8,8,0,0,0,0,16h24v24a8,8,0,0,0,16,0V216h24a8,8,0,0,0,0-16H136V167.28A72.11,72.11,0,0,0,200,96ZM80,96a48,48,0,1,1,48,48A48.05,48.05,0,0,1,80,96Z" />
                </svg>
                @Gender
            </span>
        }

        @if (!string.IsNullOrWhiteSpace(MemberSince))
        {
            <span class="inline-flex items-center gap-1 rounded-full bg-amber-50 px-3 py-1 font-medium text-amber-800">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 256 256" fill="currentColor">
                    <path d="M216,40H208V24a8,8,0,0,0-16,0V40H160V24a8,8,0,0,0-16,0V40H112V24a8,8,0,0,0-16,0V40H64V24a8,8,0,0,0-16,0V40H40A16,16,0,0,0,24,56V216a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V56A16,16,0,0,0,216,40Zm0,176H40V104H216Zm0-128H40V56H216Z" />
                </svg>
                @MemberSince
            </span>
        }
    </div>
</div>

@code
{
    [Parameter] public string Name { get; set; } = string.Empty;
    [Parameter] public string Age { get; set; } = string.Empty;
    [Parameter] public string Gender { get; set; } = string.Empty;
    [Parameter] public string MemberSince { get; set; } = string.Empty;
}
