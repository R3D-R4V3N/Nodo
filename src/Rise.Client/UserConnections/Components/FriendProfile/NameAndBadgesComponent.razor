 
    <div class="max-w-[90%] rounded-3xl bg-black/35 px-5 py-6 text-white backdrop-blur-md drop-shadow-[0_1px_12px_rgba(0,0,0,0.35)] md:max-w-lg md:bg-white/90 md:text-neutral-900 md:shadow-2xl md:shadow-emerald-500/10">
        <h1 class="text-3xl font-bold tracking-tight sm:text-4xl md:text-[2.6rem]">@Name</h1>

        <div class="mt-4 flex flex-wrap items-center gap-2 md:mt-6">
            @if (!string.IsNullOrWhiteSpace(Age))
            {
                <span class="inline-flex items-center gap-2 rounded-full border border-emerald-200 bg-emerald-50/90 px-3 py-1.5 text-xs font-semibold text-emerald-700 shadow-sm sm:text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 256 256" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="16">
                        <line x1="128" y1="72" x2="128" y2="96" />
                        <path d="M48,96H208a16,16,0,0,1,16,16v23.33c0,17.44-13.67,32.18-31.1,32.66A32,32,0,0,1,160,136a32,32,0,0,1-64,0,32,32,0,0,1-32.9,32C45.67,167.51,32,152.77,32,135.33V112A16,16,0,0,1,48,96Z" />
                        <path d="M216,156.9V200a16,16,0,0,1-16,16H56a16,16,0,0,1-16-16V156.9" />
                        <path d="M152,48a24,24,0,0,1-48,0c0-24,24-40,24-40S152,24,152,48Z" />
                    </svg>
                    <span>@Age</span>
                </span>
            }

            <span class="inline-flex items-center gap-2 rounded-full px-3 py-1.5 text-xs font-semibold sm:text-sm @GetGenderBadgeClasses()">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 256 256" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="24">
                    <circle cx="128" cy="96" r="72" />
                    <line x1="128" y1="168" x2="128" y2="240" />
                    <line x1="88" y1="208" x2="168" y2="208" />
                </svg>
                <span>@GetGenderLabel()</span>
            </span>

            @if (!string.IsNullOrWhiteSpace(MemberSince))
            {
                <span class="inline-flex items-center gap-2 rounded-full border border-neutral-200 bg-white/80 px-3 py-1.5 text-xs font-semibold text-neutral-700 shadow-sm sm:text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 256 256" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="16">
                        <rect x="40" y="40" width="176" height="176" rx="16" />
