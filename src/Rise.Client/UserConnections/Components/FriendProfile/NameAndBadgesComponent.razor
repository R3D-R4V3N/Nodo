        <h1 class="text-3xl font-bold tracking-tight sm:text-4xl md:text-[2.6rem]">@Name</h1>

        <div class="mt-4 flex flex-wrap items-center gap-2 md:mt-6">
            @if (!string.IsNullOrWhiteSpace(Age))
            {
                <span class="inline-flex items-center gap-2 rounded-full border border-emerald-200 bg-emerald-50/90 px-3 py-1.5 text-xs font-semibold text-emerald-700 shadow-sm sm:text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 256 256"><path d="M208,88H136V79a32.06,32.06,0,0,0,24-31c0-28-26.44-45.91-27.56-46.66a8,8,0,0,0-8.88,0C122.44,2.09,96,20,96,48a32.06,32.06,0,0,0,24,31v9H48a24,24,0,0,0-24,24v23.33a40.84,40.84,0,0,0,8,24.24V200a24,24,0,0,0,24,24H200a24,24,0,0,0,24-24V159.57a40.84,40.84,0,0,0,8-24.24V112A24,24,0,0,0,208,88ZM112,48c0-13.57,10-24.46,16-29.79,6,5.33,16,16.22,16,29.79a16,16,0,0,1-32,0Zm104,87.33c0,13.25-10.46,24.31-23.32,24.66A24,24,0,0,1,168,136a8,8,0,0,0-16,0,24,24,0,0,1-48,0,8,8,0,0,0-16,0,24,24,0,0,1-24.68,24C50.46,159.64,40,148.58,40,135.33V112a8,8,0,0,1,8-8H208a8,8,0,0,1,8,8Z"></path></svg>
                    <span>@Age</span>
                </span>
            }

            <span class="inline-flex items-center gap-2 rounded-full px-3 py-1.5 text-xs font-semibold sm:text-sm @GetGenderBadgeClasses()">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 256 256" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="24">
                    <circle cx="128" cy="96" r="72" />
                    <line x1="128" y1="168" x2="128" y2="240" />
                    <line x1="88" y1="208" x2="168" y2="208" />
                </svg>
                <span>@GetGenderLabel()</span>
            </span>

            @if (!string.IsNullOrWhiteSpace(MemberSince))
            {
                <span class="inline-flex items-center gap-2 rounded-full border border-neutral-200 bg-white/80 px-3 py-1.5 text-xs font-semibold text-neutral-700 shadow-sm sm:text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 256 256"><path d="M232,224H208V32h8a8,8,0,0,0,0-16H40a8,8,0,0,0,0,16h8V224H24a8,8,0,0,0,0,16H232a8,8,0,0,0,0-16ZM88,56h24a8,8,0,0,1,0,16H88a8,8,0,0,1,0-16Zm0,40h24a8,8,0,0,1,0,16H88a8,8,0,0,1,0-16Zm-8,48a8,8,0,0,1,8-8h24a8,8,0,0,1,0,16H88A8,8,0,0,1,80,144Zm72,80H104V184h48Zm16-72H144a8,8,0,0,1,0-16h24a8,8,0,0,1,0,16Zm0-40H144a8,8,0,0,1,0-16h24a8,8,0,0,1,0,16Zm0-40H144a8,8,0,0,1,0-16h24a8,8,0,0,1,0,16Z"></path></svg>
                    <span>Organisatie</span>
                </span>
            }
        </div>
    </div>

@code {
  [Parameter] public string Name { get; set; } = "Test";
  [Parameter] public string Age { get; set; } = string.Empty;
  [Parameter] public string Gender { get; set; } = string.Empty;
  [Parameter] public string MemberSince { get; set; } = string.Empty;

  private string GetGenderBadgeClasses()
  {
    var gender = Gender?.ToLowerInvariant();
    return gender switch
    {
      "vrouw" or "female" => "border border-rose-200 bg-rose-50/90 text-rose-700",
      "man" or "male" => "border border-sky-200 bg-sky-50/90 text-sky-700",
      _ => "border border-emerald-200 bg-emerald-50/90 text-emerald-700"
    };
  }

  private string GetGenderLabel() => string.IsNullOrWhiteSpace(Gender) ? "Onbekend" : Gender;
}
