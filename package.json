{
  "name": "2025-nodejs-gent15",
  "version": "1.0.0",
  "description": "Backend shopfloor applicatie",
  "main": "index.ts",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.5.0",
  "scripts": {
    "start": "tsx src/index.ts",
    "start:dev": "tsx watch --env-file .env --inspect=0.0.0.0:9001 src/index.ts",
    "build": "tsc",
    "serve": "node build/src/index.js",
    "lint": "eslint .",
    "migrate:dev": "prisma migrate dev",
    "migrate:test": "env-cmd -f .env.test prisma migrate dev --skip-seed",
    "test": "env-cmd -f .env.test jest --runInBand",
    "test:coverage": "env-cmd -f .env.test jest --runInBand --coverage",
    "test:reset": "env-cmd -f .env.test prisma migrate reset --skip-seed --force",
    "test:studio": "env-cmd -f .env.test prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "prisma": {
    "schema": "src/data/schema.prisma",
    "seed": "tsx ./src/data/seed.ts"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.0",
    "@prisma/client": "^5.20.0",
    "argon2": "^0.41.1",
    "bcrypt": "^5.1.1",
    "config": "^3.3.12",
    "dayjs": "^1.11.13",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "7.0.2",
    "koa-passport": "^6.0.0",
    "koa-session": "^6.4.0",
    "koa2-swagger-ui": "^5.11.0",
    "nodemailer": "^6.9.15",
    "passport-google-oauth2": "^0.2.0",
    "passport-local": "^1.0.0",
    "prisma": "^5.20.0",
    "swagger-jsdoc": "^6.2.8",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@faker-js/faker": "^9.5.1",
    "@stylistic/eslint-plugin": "^2.8.0",
    "@types/bcrypt": "^5",
    "@types/config": "^3.3.5",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-passport": "^6.0.3",
    "@types/koa-session": "^6.4.5",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^22.7.4",
    "@types/nodemailer": "^6.4.16",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth2": "^0",
    "@types/passport-local": "^1",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6",
    "env-cmd": "^10.1.0",
    "eslint": "^9.11.1",
    "eslint-plugin-jest": "^28.8.3",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0"
  }
}
